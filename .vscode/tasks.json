{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All Tests",
      "type": "shell",
      "command": "bazel build //test/...",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "bazel test //test/...",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Refresh Compilation Database",
      "type": "shell",
      "command": "ENVOY_GEN_COMPDB_OPTIONS=\"--vscode\" ./ci/do_ci.sh refresh_compdb",
      "problemMatcher": []
    },
    {
      "label": "Refresh Compilation Database Exclude Contrib",
      "type": "shell",
      "command": "ENVOY_GEN_COMPDB_OPTIONS=\"--vscode --exclude_contrib\" ./ci/do_ci.sh refresh_compdb",
      "problemMatcher": []
    },
    {
      "label": "Local Fix Format (All)",
      "type": "shell",
      "command": "tools/local_fix_format.sh -all",
      "problemMatcher": []
    },
    {
      "label": "Local Fix Format (Changes Only)",
      "type": "shell",
      "command": "tools/local_fix_format.sh $(git diff --name-only | grep -E '.(h|c|cc|proto)$')",
      "problemMatcher": []
    },
    {
      "label": "Build Debug Envoy (--config=docker-clang)",
      "type": "shell",
      "command": "bazel build -c dbg --//source/extensions/wasm_runtime/v8:enabled=false --config=docker-clang envoy",
      "problemMatcher": []
    },
    {
      "label": "Build Debug Envoy Test (--config=docker-clang)",
      "type": "shell",
      //"command": "bazel build -c dbg --config=docker-clang //test/common/router:router_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/integration:shadow_policy_integration_test",
      // "command": "bazel build -c dbg --config=docker-clang //test/integration:mixed_upstream_integration_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/extensions/http/original_ip_detection/xff:xff_detection_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/common/http:conn_manager_utility_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/extensions/clusters/logical_dns:logical_dns_cluster_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/common/upstream:cluster_manager_impl_test",
      //"command": "bazel build -c dbg --config=docker-clang //test/common/upstream:upstream_impl_test",
      "command": "bazel build -c dbg --config=docker-clang //test/common/upstream:upstream_impl_test //test/common/upstream:cluster_manager_impl_test //test/extensions/clusters/logical_dns:logical_dns_cluster_test //test/common/http:conn_manager_utility_test //test/common/router:router_test",
      "problemMatcher": []
    },
  ]
}
