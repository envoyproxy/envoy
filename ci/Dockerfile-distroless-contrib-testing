FROM debian:bookworm-slim
COPY --from=envoyproxy/envoy:contrib-distroless-dev /usr/local/bin/envoy /usr/local/bin/envoy
CMD ["/bin/sh", "-c", "/usr/local/bin/envoy --version 2>&1 | grep -q '\\-contrib' && echo 'OK: contrib-distroless contains contrib binary' || (echo 'FAIL: contrib-distroless does NOT contain contrib binary - version:'; /usr/local/bin/envoy --version 2>&1; exit 1)"]
