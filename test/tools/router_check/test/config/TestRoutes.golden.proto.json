    {
      "test_name": "RequestHeaderMatches 1",
      "input": {
        "authority": "api.lyft.com",
        "path": "/host/rewrite/me",
        "method": "GET"
      },
      "validate": {
        "host_rewrite": "new_host",
        "request_header_matches": [
          {
            "name": ":authority",
            "string_match": {
              "exact": "new_host"
            }
          },
          {
            "name": ":path",
            "string_match": {
              "exact": "/host/rewrite/me"
            }
          },
          {
            "name": ":method",
            "string_match": {
              "exact": "GET"
            }
          },
          {
            "name": ":cookie",
            "invert_match": true
          }
        ]
      }
    },
    {
      "test_name": "RequestHeaderMatches 2",
      "input": {
        "authority": "api.lyft.com",
        "path": "/customheaders",
        "method": "GET"
      },
      "validate": {
        "request_header_matches": [
          {
            "name": "X-Client-IP",
            "string_match": {
              "exact": "127.0.0.1"
            }
          }
        ]
      }
    },
    {
      "test_name": "ResponseHeaderMatches",
      "input": {
        "authority": "www.lyft.com",
        "path": "/ping",
        "method": "GET"
      },
      "validate": {
        "cluster_name": "",
        "host_rewrite": "",
        "path_redirect": "http://www.lyft.com/ping",
        "path_rewrite": "",
        "virtual_cluster_name": "",
        "virtual_host_name": "",
        "response_header_matches": [
          {
            "name": "content-type",
            "string_match": {
              "exact": "text/plain"
            }
          },
          {
            "name": "content-length",
            "range_match":
            {
              "start": 0,
              "end": 100
            }
          },
          {
            "name": "x-ping-response",
            "string_match": {
              "exact": "yes"
            }
          },
          {
            "name": "x-ping-response",
            "present_match": true
          },
          {
            "name": "x-pong-response",
            "present_match": true,
            "invert_match": true
          },
        ]
      }
    }
