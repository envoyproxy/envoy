{
    "listeners": [{
        "address": "tcp://127.0.0.1:10000",
        "filters": [{
            "name": "http_connection_manager",
            "config": {
                "codec_type": "auto",
                "stat_prefix": "ingress_http",
                "route_config": {
                    "virtual_hosts": [{
                        "name": "local_service",
                        "domains": [
                            "*"
                        ],
                        "routes": [{
                            "timeout_ms": 0,
                            "prefix": "/",
                            "host_rewrite": "www.google.com",
                            "cluster": "service_google"
                        }]
                    }]
                },
                "filters": [{
                    "name": "router",
                    "config": {}
                }]
            }
        }]
    }],
    "admin": {
        "access_log_path": "/tmp/admin_access.log",
        "address": "tcp://127.0.0.1:9901"
    },
    "cluster_manager": {
        "clusters": [{
            "name": "service_google",
            "connect_timeout_ms": 250,
            "type": "logical_dns",
            "lb_type": "round_robin",
            "hosts": [{
                "url": "tcp://google.com:443"
            }],
            "ssl_context": {
                "sni": "www.google.com"
            }
        }]
    }
}
